rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * KARATASI HOTELIER SECURITY MODEL - PROTOTYPE
     * 
     * Simplified rules for rapid prototyping.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Rooms are viewable by everyone. Management (signed-in users) can edit.
     */
    match /rooms/{roomId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    /**
     * @description Clients information. Management (signed-in users) can read/write.
     */
    match /clients/{clientId} {
      allow read, write: if isSignedIn();
    }

    /**
     * @description Reservations are viewable and manageable by signed-in staff.
     */
    match /reservations/{reservationId} {
      allow read, write: if isSignedIn();
    }

    /**
     * @description Invoices are viewable and manageable by signed-in staff.
     */
    match /invoices/{invoiceId} {
      allow read, write: if isSignedIn();
    }

    /**
     * @description Staff records.
     */
    match /staff/{staffId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == staffId;
    }

    /**
     * @description System settings.
     */
    match /settings/{settingId} {
      allow read, write: if isSignedIn();
    }
  }
}