rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Core Philosophy:
     * Restricted access for K.H.M.System Hotelier.
     * Only authenticated admin accounts are permitted to view or manage data.
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && 
             (exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) || 
              request.auth.token.email == 'aubinmaga@gmail.com');
    }

    // --- Rules ---

    /**
     * @description Everything is restricted to the Administrator for maximum security.
     */
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    /**
     * @description Allow the primary admin to create their own role record during signup.
     */
    match /roles_admin/{staffId} {
      allow create: if isSignedIn() && request.auth.token.email == 'aubinmaga@gmail.com';
    }

    match /staff/{staffId} {
      allow create: if isSignedIn() && request.auth.token.email == 'aubinmaga@gmail.com';
    }
  }
}