
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Core Philosophy:
     * Restricted access for ImaraPMS.
     * Support for invitation-based staff onboarding.
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isStaff() {
      return isSignedIn() && exists(/databases/$(database)/documents/staff/$(request.auth.uid));
    }

    function isAdmin() {
      return isSignedIn() && 
             (request.auth.token.email == 'aubinmaga@gmail.com' ||
              exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    // --- Rules ---

    /**
     * @description Allow public read of settings to display hotel name/branding.
     */
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Allow public read of staff to verify invitations during login.
     * Allow users to update/create their own staff record during onboarding.
     * Allow invitation cleanup if the email matches.
     */
    match /staff/{staffId} {
      allow read: if true;
      allow create: if isAdmin() || (isSignedIn() && (request.auth.uid == staffId || request.auth.token.email == 'aubinmaga@gmail.com'));
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == staffId);
      allow delete: if isAdmin() || (isSignedIn() && resource.data.email == request.auth.token.email);
    }

    /**
     * @description Allow creation of admin roles for Managers and invited admins.
     */
    match /roles_admin/{staffId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (request.auth.token.email == 'aubinmaga@gmail.com' || isAdmin() || request.auth.uid == staffId);
      allow update, delete: if isAdmin();
    }

    /**
     * @description Core hotel data: Accessible to all signed-in staff for operations.
     */
    match /rooms/{roomId} {
      allow read: if isSignedIn();
      allow write: if isStaff() || isAdmin();
    }

    match /reservations/{resId} {
      allow read: if isSignedIn();
      allow write: if isStaff() || isAdmin();
    }

    match /clients/{clientId} {
      allow read: if isSignedIn();
      allow write: if isStaff() || isAdmin();
    }

    match /invoices/{invId} {
      allow read: if isSignedIn();
      allow write: if isStaff() || isAdmin();
    }

    /**
     * @description Default deny for everything else.
     */
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
