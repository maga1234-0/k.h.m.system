
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Core Philosophy:
     * Restricted access for ImaraPMS.
     * Only authenticated admin accounts are permitted to view or manage data.
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // Reordered to check the primary admin email FIRST.
      // This prevents recursive rule evaluation during the initial setup
      // when the roles_admin document doesn't exist yet or is being evaluated.
      return isSignedIn() && 
             (request.auth.token.email == 'aubinmaga@gmail.com' ||
              exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    // --- Rules ---

    /**
     * @description Everything is restricted to the Administrator for maximum security.
     */
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    /**
     * @description Specific allows to bootstrap the primary admin account roles.
     */
    match /roles_admin/{staffId} {
      allow create: if isSignedIn() && request.auth.token.email == 'aubinmaga@gmail.com';
    }

    match /staff/{staffId} {
      allow create: if isSignedIn() && request.auth.token.email == 'aubinmaga@gmail.com';
    }
    
    match /settings/{settingId} {
      allow read, write: if isAdmin();
    }
  }
}
