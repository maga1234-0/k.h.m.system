
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && 
             (request.auth.token.email == 'aubinmaga@gmail.com' ||
              exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /staff/{staffId} {
      // Lecture et recherche nécessaires pour vérifier les invitations lors de l'onboarding
      allow read, list: if true; 
      // Un utilisateur peut créer/modifier son propre profil
      allow create, update: if isSignedIn() && (request.auth.uid == staffId || isAdmin());
      // Un utilisateur peut supprimer son invitation temporaire lors de l'activation
      allow delete: if isAdmin() || (isSignedIn() && (request.auth.uid == staffId || (resource != null && resource.data.email == request.auth.token.email)));
    }

    match /roles_admin/{staffId} {
      allow read: if isSignedIn();
      // Permet l'auto-promotion (Manager) ou via l'admin principal
      allow create: if isSignedIn() && (request.auth.uid == staffId || request.auth.token.email == 'aubinmaga@gmail.com' || isAdmin());
      allow update, delete: if isAdmin();
    }

    match /rooms/{roomId} {
      allow read, write: if isSignedIn();
    }

    match /reservations/{resId} {
      allow read, write: if isSignedIn();
    }

    match /clients/{clientId} {
      allow read, write: if isSignedIn();
    }

    match /invoices/{invId} {
      allow read, write: if isSignedIn();
    }

    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
