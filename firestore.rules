rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Core Philosophy:
     * This ruleset implements a robust hotel management security model. 
     * In this prototype, we prioritize operational efficiency for hotel staff.
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Checks if the user is registered as a staff member
    function isStaff() {
      return isSignedIn() && exists(/databases/$(database)/documents/staff/$(request.auth.uid));
    }

    // Checks if the user has global admin privileges via the roles_admin collection
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- Rules ---

    /**
     * @description Rules for private client profiles.
     */
    match /users/{userId}/clients/{clientId} {
      allow get, list: if isOwner(userId) || isStaff();
      allow create: if isOwner(userId) && request.resource.data.id == clientId;
      allow update, delete: if isOwner(userId) || isStaff();
    }

    /**
     * @description Rules for the general clients collection (if used directly).
     */
    match /clients/{clientId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Rules for room inventory.
     */
    match /rooms/{roomId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Rules for hotel reservations.
     */
    match /reservations/{reservationId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isStaff() || isAdmin();
    }

    /**
     * @description Rules for invoices.
     */
    match /invoices/{invoiceId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isStaff() || isAdmin();
    }

    /**
     * @description Rules for staff member profiles.
     */
    match /staff/{staffId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isOwner(staffId) || isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Administrative role assignments.
     */
    match /roles_admin/{staffId} {
      allow get: if isSignedIn();
      allow list, create, update, delete: if isAdmin() || isSignedIn(); // Relaxed for prototyping
    }

    /**
     * @description Analytical occupancy forecasts.
     */
    match /occupancyForecasts/{forecastId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isStaff() || isAdmin();
    }

    /**
     * @description General settings.
     */
    match /settings/{settingId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }
  }
}