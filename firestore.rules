
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && 
             (request.auth.token.email == 'aubinmaga@gmail.com' ||
              exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /staff/{staffId} {
      // Lecture publique nécessaire pour vérifier les invitations à la connexion
      allow read, list: if true; 
      allow create: if isSignedIn() && (isAdmin() || request.auth.uid == staffId);
      allow update: if isSignedIn() && (isAdmin() || request.auth.uid == staffId);
      allow delete: if isAdmin() || (isSignedIn() && (request.auth.uid == staffId || resource.data.email == request.auth.token.email));
    }

    match /roles_admin/{staffId} {
      allow read: if isSignedIn();
      // Permet à un utilisateur de s'auto-promouvoir admin s'il est le créateur du document (utilisé lors du premier login d'un manager)
      allow create: if isSignedIn() && (request.auth.token.email == 'aubinmaga@gmail.com' || isAdmin() || request.auth.uid == staffId);
      allow update, delete: if isAdmin();
    }

    match /rooms/{roomId} {
      allow read, write: if isSignedIn();
    }

    match /reservations/{resId} {
      allow read, write: if isSignedIn();
    }

    match /clients/{clientId} {
      allow read, write: if isSignedIn();
    }

    match /invoices/{invId} {
      allow read, write: if isSignedIn();
    }

    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
