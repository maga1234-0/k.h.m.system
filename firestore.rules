rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * KARATASI HOTELIER SECURITY MODEL - PROTOTYPE
     * 
     * Simplified rules for rapid prototyping.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Rooms are viewable by everyone. Management (signed-in users) can edit.
     */
    match /rooms/{roomId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    /**
     * @description Clients can manage their own profiles.
     */
    match /clients/{clientId} {
      allow read, write: if isSignedIn() && (request.auth.uid == clientId || request.auth.uid == resource.data.id);
    }

    /**
     * @description Reservations are private to the creator or visible to staff.
     */
    match /reservations/{reservationId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    /**
     * @description Invoices and Staff records.
     */
    match /invoices/{invoiceId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /staff/{staffId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == staffId;
    }
  }
}