
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Core Philosophy:
     * Restricted access for ImaraPMS.
     * Support for invitation-based staff onboarding.
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && 
             (request.auth.token.email == 'aubinmaga@gmail.com' ||
              exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    // --- Rules ---

    /**
     * @description Allow public read of settings to display hotel name/branding.
     */
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Allow public read of staff to verify invitations during login.
     * Write access is restricted to admins.
     */
    match /staff/{staffId} {
      allow read: if true;
      allow create, update, delete: if isAdmin() || (isSignedIn() && request.auth.token.email == 'aubinmaga@gmail.com');
    }

    /**
     * @description Allow creation of admin roles for bootstrapping and invited managers.
     */
    match /roles_admin/{staffId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (request.auth.token.email == 'aubinmaga@gmail.com' || isAdmin() || request.auth.uid == staffId);
      allow update, delete: if isAdmin();
    }

    /**
     * @description All other documents require admin privileges.
     */
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
